<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1.0dp" android:color="@color/color_white" android:dashWidth="4.0dp"
                        android:dashGap="2.0dp" />
                    <solid android:color="@color/color_white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1.0dp" android:color="@color/color_red" />
            <solid android:color="@color/color_white" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/channel_default5" />
            <solid android:color="@color/channel_default5" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/bgcolor" />
            <solid android:color="@color/bgcolor" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dp" android:color="@color/channel_default5" />
            <solid android:color="@color/color_white" />
        </shape>
    </item>
</selector>