<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tip_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="8.0dip"
    android:background="@color/bgcolor">

    <TextView
        android:id="@+id/chose_city_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8.0dip"
        android:drawablePadding="8.0dip"
        android:drawableRight="@drawable/he_frist3_city"
        android:text="@string/frist3_city_switch"
        android:textColor="@color/color_black"
        android:textSize="14.0sp" />

    <View
        android:id="@+id/choose_city_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_white" />

    <TextView
        android:id="@+id/choose_city_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="12.0dip"
        android:drawableTop="@drawable/he_arrow_channel"
        android:paddingTop="22.0dip"
        android:text="@string/Frist3_localnews"
        android:textColor="@color/color_black"
        android:textSize="15.0sp"
        android:visibility="gone" />

    <View
        android:id="@+id/section_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_white" />

</LinearLayout>