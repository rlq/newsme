<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_black"
    android:visibility="gone"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:weightSum="1">
    <ImageView
        android:layout_width="17dp"
        android:layout_height="29dp"
        android:id="@+id/mediacontroller_lock_img"
        android:background="@drawable/he_setting_normal"
        android:layout_marginLeft="15dp"
        android:layout_weight="0.04" />
    <TextView
        android:id="@+id/mediacontroller_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:ellipsize="marquee"
        android:textSize="14sp"
        android:text="videoname"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:layout_centerHorizontal="true"
          />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/net_work_speed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textSize="12dp"
            android:text="117kB/s"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/currenttime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textSize="12dp"
            android:text="15:12"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/download_precent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textSize="12dp"
            android:text="38%"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/mediacontroller_setting"
            android:background="@drawable/he_setting_normal"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_white"
            />
    </LinearLayout>
</RelativeLayout>